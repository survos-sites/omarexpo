{# <div class="container col-lg-9"  id="sectionToSave"> #}
<div class="card-main-class">
    <div class="card-second-class">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="flex border-1">
                        <div>
                            <h2>{{ i.title }}</h2>
                            <b style="margin-bottom: 4px">
                                {{ i.description }}
                            </b>
                            <div>
                                {{ i.size }}
                            </div>
                            <div>
                                {{ i.year }}
                            </div>
                            <div class="d-flex justify-content-center row">

                                <div class="col">

                                    {% set url = absolute_url(path('item_redirect', i.rp)) %}
                                    <a href="{{ url }}" target="_blank">
                                        {% set thumbPath = '%s/%s'|format(item.code, item.image)|imagine_filter('small') %}
                                        <img src="{{ thumbPath }}" alt="{{ thumbPath }}"/>

                                        {#                    <img src="{{ qr_code_data_uri(url) }}" class="img-fluid col-md-5 "> #}
                                    </a>
                                    {#                    </div> #}
                                    {#                  <div> #}
                                    {% set audio = item.audio %}


                                    <div class="float-end">
                                        {# we will only use the summary #}
                                        <blockquote>
                                            escucha m√°s sobre el artista
{#                                            {{ item.firstline }}#}
                                        </blockquote>
{#                                        <blockquote>#}
{#                                            {{ item.transcript|slice(0, 120) }}#}
{#                                        </blockquote>#}
                                    <div class="qr-label-thumbnail" >
                                        {% set qrUrl = qr_code_url(url) %}
                                        <img src="{{ qrUrl }}" style="width: 80px" alt="{{ qrUrl }}" title="{{ qrUrl }}">
{#                                      <img {{ stimulus_controller('qr', {text: url}) }} class="d-print qr-label-thumbnail col-md-5"/>#}
                                    <twig:ux:icon
                                            height="100"
                                            width="100"
                                            name="material-symbols:headphones-outline"
                                            class="qr-label-thumbnail"/>

                                        {#                      {{ i.orderIdx }} #}
                                    </div>

                                    </div>


                                </div>
                            </div>
                        </div>

                        <div class="card-footer-last-section">
                            <div class="container">
                                <h2>
                                    <img src="{{ asset('/images/omar-expo.jpeg') }}" alt="logo" style="height: 80px"/>
                                    {{ project.labelFooter|title }}
                                    <span class="float-end">
{#                                        {{ i.code }}#}
                                        ${{ i.price }}
                                    </span>
                                </h2>
                                {#                <h2>Juan Chawuk</h2> #}
                                {#                <p>juanchawuk711@gmail.com | 967 2021897</p> #}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 ">
                    <div class="container card-left-section">
                        {% for var,val in i.attributes %}
                            {% if val and not (var ends with '*') %}

                                <h4>{{ val }}</h4>
                                <h6 class="card-subtitle">{{ var|trans|title }}</h6>

                                {#                  <h4>{{ var|trans|title }}</h4> #}
                                {#                  <span>{{ val }}</span> #}
                            {% else %}
                                {#                    {{ var }} #}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<p style="page-break-before: always;">&nbsp;</p>
<span class=".page-break"></span>

{# </div> #}
