{# <div class="container col-lg-9"  id="sectionToSave"> #}
<div class="label-card">
    <div class="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div>
                        <div class="card">
                            <div class="card-header flex-column align-items-start">
                                <h2 class="mb-0">{{ i.title }}</h2>
                                <p class="card-subtitle">{{ i.description }}</p>
                            </div>
                            <div class="card-body">
                            <div class="text-muted fw-medium mb-1">
                                {{ i.size }}
                            </div>
                            <div class="text-muted fw-medium mb-3">
                                {{ i.year }}
                            </div>
                            <div class="d-flex justify-content-center row">

                                <div class="col">

                                    {% set url = absolute_url(path('item_redirect', i.rp)) %}
                                    <a href="{{ url }}" target="_blank">
                                        {% set thumbPath = '%s/%s'|format(item.code, item.image)|imagine_filter('small') %}
                                        <img class="img-thumbnail" src="{{ thumbPath }}" alt="{{ thumbPath }}"/>

                                        {#                    <img src="{{ qr_code_data_uri(url) }}" class="img-fluid col-md-5 "> #}
                                    </a>
                                    {#                    </div> #}
                                    {#                  <div> #}
                                    {% set audio = item.audio %}


                                    <div class="float-end col-sm-5">
                                        {# we will only use the summary #}
                                        <blockquote class="text-body fw-semibold">
                                            escucha a Omar hablar sobre esta pieza
                                            {#                                            {{ item.firstline }}#}
                                        </blockquote>
{#                                        <blockquote>#}
{#                                            {{ item.transcript|slice(0, 120) }}#}
{#                                        </blockquote>#}
                                    <div class="d-flex align-items-lg-center gap-3" >
                                        {% set qrUrl = qr_code_url(url) %}
                                        <img class="img-fluid" src="{{ qrUrl }}" style="width: 80px" alt="{{ qrUrl }}" title="{{ qrUrl }}">
{#                                      <img {{ stimulus_controller('qr', {text: url}) }} class="d-print qr-label-thumbnail col-md-5"/>#}
                                    <twig:ux:icon
                                            height="50"
                                            width="50"
                                            name="material-symbols:headphones-outline"
                                            class="qr-label-thumbnail"/>

                                        {#                      {{ i.orderIdx }} #}
                                    </div>

                                    </div>


                                </div>
                            </div>
                            </div>
                        <div class="card-footer bg-white d-flex align-items-center gap-2 justify-content-between">
                                <h2 class="mb-0 d-flex align-items-center gap-2">
                                    <img class="avatar avatar-lg object-cover" src="{{ asset('/images/omar-expo.jpeg') }}" alt="logo"/>
                                    {{ project.labelFooter|title }}
                                </h2>
                                    <span class="float-end h2 mb-0">
{#                                        {{ i.code }}#}
                                        ${{ i.price }}
                                    </span>
                                {#                <h2>Juan Chawuk</h2> #}
                                {#                <p>juanchawuk711@gmail.com | 967 2021897</p> #}
                        </div>
                        </div>

                    </div>

                </div>
                <div class="col-md-4 ">
                    <div class="container card-left-section">
                        {% for var,val in i.attributes %}
                            {% if val and not (var ends with '*') %}

                                <h4>{{ val }}</h4>
                                <h6 class="card-subtitle">{{ var|trans|title }}</h6>

                                {#                  <h4>{{ var|trans|title }}</h4> #}
                                {#                  <span>{{ val }}</span> #}
                            {% else %}
                                {#                    {{ var }} #}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<p style="page-break-before: always;">&nbsp;</p>
<span class=".page-break"></span>

{# </div> #}
